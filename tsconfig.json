{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": { "*": ["./types/*"] },
    "skipLibCheck": true,
    "types": ["vite/client"],
    "verbatimModuleSyntax": true
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist", "build.ts"]
}
